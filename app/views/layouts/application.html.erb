<!DOCTYPE html>
<html>
  <head>
    <title>BikeWeather</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "http://www.google.com/jsapi", "chartkick" %>
    <%= stylesheet_link_tag 'http://yandex.st/bootstrap/3.1.1/css/bootstrap.min.css' %>
    <%= javascript_include_tag 'http://yandex.st/bootstrap/3.1.1/js/bootstrap.min.js' %>
  </head>

  <body>
    <div class="nav">
      <ul>
        <li><%= link_to 'Home', root_path %></li> |
        <li><%= link_to 'See Citibike Data', citibikes_path, method: "get" %></li> | 
        <li><%= link_to 'See Weather Data', weathers_path, method: "get" %></li>
      </ul>
    </div>
    <%= yield %>
  </body>
</html>
